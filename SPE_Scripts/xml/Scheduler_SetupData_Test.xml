<?xml version="1.0" encoding="utf-8"?>
<Scheduler Version="0.1">
    <Websites>
        <Website ScriptInternalName="RootWeb" relativeUrl="/">
            <Lists>
                <List Name="Scheduler_Log" Template="Generic list">
                    <Description>Log messages generated by the Scheduler's PowerShell scripts</Description>
                    <Fields>
                        <Field Type="Text" Name="Title" StaticName="TimeStamp" DisplayName="TimeStamp" Description="The original title field, renamed to TimeStamp">
                            <AddFieldOptions>
                                <AddFieldInternalNameHint />
                                <AddFieldToDefaultView />
                            </AddFieldOptions>
                        </Field>
                        <Field Type="Text" Name="Process" StaticName="Process" DisplayName="Process" Description="The Process field">
                            <AddFieldOptions>
                                <AddFieldInternalNameHint />
                                <AddFieldToDefaultView />
                            </AddFieldOptions>
                        </Field>
                        <Field Type="Text" Name="Thread" StaticName="Thread" DisplayName="Thread" Description="The Thread field">
                            <AddFieldOptions>
                                <AddFieldInternalNameHint />
                                <AddFieldToDefaultView />
                            </AddFieldOptions>
                        </Field>
                        <Field Type="Text" Name="Area" StaticName="Area" DisplayName="Area" Description="The Area Field">
                            <AddFieldOptions>
                                <AddFieldInternalNameHint />
                                <AddFieldToDefaultView />
                            </AddFieldOptions>
                        </Field>
                        <Field Type="Text" Name="Category" StaticName="Category" DisplayName="Category" Description="The Category Field">
                            <AddFieldOptions>
                                <AddFieldInternalNameHint />
                                <AddFieldToDefaultView />
                            </AddFieldOptions>
                        </Field>
                        <Field Type="Text" Name="EventId" StaticName="EventId" DisplayName="EventId" Description="The EventId Field">
                            <AddFieldOptions>
                                <AddFieldInternalNameHint />
                                <AddFieldToDefaultView />
                            </AddFieldOptions>
                        </Field>
                        <Field Type="Text" Name="Level" StaticName="Level" DisplayName="Level" Description="The Level field">
                            <AddFieldOptions>
                                <AddFieldInternalNameHint />
                                <AddFieldToDefaultView />
                            </AddFieldOptions>
                        </Field>
                        <Field Type="Text" Name="Correlation" StaticName="Correlation" DisplayName="Correlation" Description="The Correlation field">
                            <AddFieldOptions>
                                <AddFieldInternalNameHint />
                                <AddFieldToDefaultView />
                            </AddFieldOptions>
                        </Field>
                        <Field Type="Note" Name="Message" StaticName="Message" DisplayName="Message" NumLines="6" RichText="FALSE" Sortable="FALSE" Description="The Message field">
                            <AddFieldOptions>
                                <AddFieldInternalNameHint />
                                <AddFieldToDefaultView />
                            </AddFieldOptions>
                        </Field>
                    </Fields>
                    <Views>
                        <View Name="All Items" ViewType="none" Paged="True" PersonalView="False" SetAsDefaultView="True">
                            <Query>
                                <OrderBy>
                                    <FieldRef Name="Title" Ascending="FALSE" />
                                </OrderBy>
                            </Query>
                            <ViewFields>
                                <FieldRef Name="Title" />
                                <FieldRef Name="Process" />
                                <FieldRef Name="Category" />
                                <FieldRef Name="Level" />
                                <FieldRef Name="Message" />
                                <FieldRef Name="Correlation" />
                                <FieldRef Name="Area" />
                                <FieldRef Name="Thread" />
                                <FieldRef Name="EventId" />
                            </ViewFields>
                            <RowLimit>1000</RowLimit>
                        </View>
                    </Views>
                </List>
            </Lists>
        </Website>
    </Websites>
</Scheduler>